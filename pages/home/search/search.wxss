/* pages/home/search/search.wxss */

.goods-container{
  position: relative;
  /* margin-top: 70px; */
}
.category-title {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
  padding: 0px 10px;
} 
.category-title .title{
  font-size: 16px;
  font-weight:900;
} 

.goods{  
    display: flex;  
    justify-content: start;
    flex-direction: row;  
    flex-wrap: wrap;  
    /* margin:10px 5px; */
    zoom:1;
    clear:both;

}
.goods-good{ 
    width:49%;
    float:left;
    vertical-align:top;
    border:1px solid #f2f2f2;
    background-color:white;
    margin-bottom:8rpx;
    -moz-box-sizing:border-box;
    -o-box-sizing:border-box;
    box-sizing:border-box;
    margin-right:1%;
}
.goods-image{  
  margin:20rpx auto;
  text-align: center;
}
.goods-image image{
  width:350rpx;
  height:350rpx;

}
.goods-good .product-name{  
    color: #000;  /* height: 28px; */
    text-align:left;   
    margin: 0px 5px; 
    margin-bottom: 5px;
    /* 控制字符长度 */
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center; 
}
.product-price-wrap{  
    height: 40rpx;
}
.product-price-wrap .product-price{  
    color: #e80080;  
    margin-left:5px;  
    font-weight:900;  
    font-size: 30rpx;
}
